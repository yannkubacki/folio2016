.projects-mobile
	display none
	width 76.8rem
	max-width 100%
	margin 4rem 0
	
	&__project
		& + .projects-mobile__project
			margin-top 5rem
	
	&__thumbnail
		img 
			display block
			height auto
			max-width 100%
			
	&__header
		display flex
		flex-direction row
		justify-content space-between
		align-items flex-start
		margin-top 2rem
			
	&__title
		font-family $Moderat-Bold
		font-size 2.4rem
		color $black
		
		time
			display block
			margin-top 0.6rem
			font-family $Moderat
			font-size 1.2rem
			
	&__btn-more
		position relative
		display inline-block
		font-family $Moderat-Bold
		text-transform uppercase
		color $indigo
			
		&:after
			content ''
			position absolute
			z-index 1
			bottom -0.4rem
			left 0
			width 100%
			height 0.1rem
			background rgba($indigo, 0.25)
			
		&:before
			content ''
			position absolute
			z-index 2
			bottom -0.4rem
			left 0
			width 0
			height 0.1rem
			background $indigo
			transition background,width 0.2s ease-out 
			
		&:hover
			&:before
				width 100%
	
	&__infos
		margin-top 3rem
		font-size 1.5rem
		
	&__description
		margin-bottom 2.5rem
		line-height 2em
		
	&__tags-list
		margin-bottom 3rem
		list-style-type none
		line-height 2em
		
	&__btn-cta
		display block
		width 17.5rem
		height 5rem
		text-align center
		line-height 5rem
		font-size 1.2rem
		text-transform uppercase
		color $white
		background $indigo
		
	@media (max-width: $desktop)
		display block
		