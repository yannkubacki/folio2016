.about
	position absolute
	z-index 10
	top 5rem
	left 5rem
	font-size 1.5rem
	line-height 2em
	
	&__name
		color $indigo
		
	&__job
		color $grey-dark
		
	&__intro
		
		a
			position relative
			display inline-block
			
			&:after
				content ''
				position absolute
				z-index 1
				bottom 0.2rem
				left 0
				width 100%
				height 0.1rem
				background rgba($indigo, 0.25)
				
			&:before
				content ''
				position absolute
				z-index 2
				bottom 0.2rem
				left 0
				width 0
				height 0.1rem
				background $indigo
				transition background,width 0.2s ease-out 
				
			&:hover
	
				&:before
					width 100%			
		
	&__projects
		margin-top 4rem
		
	&__list
		list-style-type none
		
	&__list-item
		
		display flex
		align-items center
		
		> a
			position relative
			display inline-block
			
			&:after
				content ''
				position absolute
				z-index 1
				bottom 0.2rem
				left 0
				width 0
				height 0.1rem
				background $indigo
				transition width 0.2s ease-out 
				
			&:hover 
				
				&:after
					width 100%
			

			
		&:before 
			content ''
			display block
			width 0.5rem
			height 0.5rem
			margin-right 1rem
			background $indigo
		

	