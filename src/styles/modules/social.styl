.social
	position absolute
	z-index 10
	bottom 5rem
	left 5rem
	font-size 1.5rem
	line-height 2em
	
	&__list
		display flex
		flex-direction row
		align-items center
		
	&__list-item
		margin-right 1.5rem
		
		&:last-child
			margin-right 0
			
		> a 
			position relative
			display inline-block
			
			&:after
				content ''
				position absolute
				z-index 1
				bottom 0.2rem
				left 0
				width 0
				height 0.1rem
				background $indigo
				transition width 0.2s ease-out 
				
			&:hover 
				
				&:after
					width 100%
					
	@media (max-width: 992px)
		position static